{
  "name": "chatglm-web-frontend",
  "version": "0.1.0",
  "description": "Frontend dependencies for ChatGLM Web Application",
  "author": "ChatGLM Web Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chatglm-web.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run web-search\" \"vite\"",
    "web-search": "cd web-search-service && npm start",
    "build": "vite build && node fix-html.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "shadcn-ui": "npx shadcn-ui@latest",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run web-search\" \"npm run dev-only\" \"wait-on http://localhost:5173 && electron .\"",
    "dev-only": "vite",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:win:clean": "npm run build && rmdir /s /q dist-electron 2>nul & electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "jsdom": "^23.0.1",
    "mock-socket": "^9.3.1",
    "postcss": "^8.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@daytonaio/sdk": "^0.25.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/typography": "^0.5.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.chatglm.web",
    "productName": "ChatGLM Web",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": false
  }
}
