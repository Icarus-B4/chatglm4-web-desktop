<svg width="16" height="16" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Hintergrund -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="chatGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f8fafc;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="8" stdDeviation="16" flood-color="#000000" flood-opacity="0.2"/>
    </filter>
  </defs>
  
  <!-- Hauptkreis mit Gradient -->
  <circle cx="256" cy="256" r="240" fill="url(#bgGradient)" filter="url(#shadow)"/>
  
  <!-- Chat-Bubble Hintergrund -->
  <path d="M 120 160 Q 120 140 140 140 L 372 140 Q 392 140 392 160 L 392 320 Q 392 340 372 340 L 140 340 Q 120 340 120 320 Z" 
        fill="url(#chatGradient)" opacity="0.95"/>
  
  <!-- Chat-Bubble Spitze -->
  <path d="M 180 340 L 200 360 L 220 340 Z" fill="url(#chatGradient)" opacity="0.95"/>
  
  <!-- Chat-Zeilen -->
  <rect x="160" y="180" width="120" height="8" rx="4" fill="#94a3b8" opacity="0.7"/>
  <rect x="160" y="200" width="80" height="8" rx="4" fill="#94a3b8" opacity="0.5"/>
  <rect x="160" y="220" width="100" height="8" rx="4" fill="#94a3b8" opacity="0.6"/>
  
  <!-- Antwort-Bubble -->
  <path d="M 200 260 Q 180 260 180 280 L 180 300 Q 180 320 200 320 L 332 320 Q 352 320 352 300 L 352 280 Q 352 260 332 260 Z" 
        fill="#667eea" opacity="0.9"/>
  
  <!-- Antwort-Zeilen -->
  <rect x="200" y="280" width="100" height="6" rx="3" fill="white" opacity="0.9"/>
  <rect x="200" y="290" width="80" height="6" rx="3" fill="white" opacity="0.7"/>
  <rect x="200" y="300" width="60" height="6" rx="3" fill="white" opacity="0.8"/>
  
  <!-- AI-Symbol (Gehirn/Neuron) -->
  <g transform="translate(380, 120)">
    <!-- Neuron-Knoten -->
    <circle cx="0" cy="0" r="12" fill="#fbbf24" opacity="0.9"/>
    <circle cx="0" cy="0" r="6" fill="#ffffff"/>
    
    <!-- Verbindungen -->
    <line x1="-8" y1="-8" x2="8" y2="8" stroke="#fbbf24" stroke-width="2" opacity="0.6"/>
    <line x1="8" y1="-8" x2="-8" y2="8" stroke="#fbbf24" stroke-width="2" opacity="0.6"/>
    <line x1="0" y1="-12" x2="0" y2="12" stroke="#fbbf24" stroke-width="2" opacity="0.6"/>
    <line x1="-12" y1="0" x2="12" y2="0" stroke="#fbbf24" stroke-width="2" opacity="0.6"/>
  </g>
  
  <!-- Glow-Effekt -->
  <circle cx="256" cy="256" r="200" fill="none" stroke="#ffffff" stroke-width="2" opacity="0.1"/>
</svg>